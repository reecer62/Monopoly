<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.reece.hackupstatex.StartNewGameActivity">

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="150sp"
        android:layout_height="60sp"
        android:layout_marginStart="16sp"
        android:text="Back to Main Menu"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginLeft="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16sp" />

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input your username"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginLeft="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewOptionsTitle" />

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginRight="16sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewUsername" />

    <TextView
        android:id="@+id/textViewOptionsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Host Game Options"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20dp"
        android:layout_marginRight="16sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16sp" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="150sp"
        android:layout_height="60sp"
        android:layout_marginBottom="16sp"
        android:layout_marginRight="16sp"
        android:text="Next"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16sp"/>

    <EditText
        android:id="@+id/editTextNumPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumPlayers" />

    <TextView
        android:id="@+id/textViewNumPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:text="Input the numbers of players"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30sp"
        app:layout_constraintTop_toBottomOf="@+id/editTextUsername" />

</android.support.constraint.ConstraintLayout>
